      hexjson:
        layout: odd-r
        hexes:
          E08000016: { n: Barnsley, colour: "#E6007C", q: 0, r: -2 }
          E08000032: { n: Bradford, colour: "#FF6700", q: -1, r: 0 }
          E08000033: { n: Calderdale, colour: "#0DBC37", q: -2, r: -1 }
