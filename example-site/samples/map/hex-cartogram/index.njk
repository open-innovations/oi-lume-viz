        slider:
          columns: ['2016','2017','2018','2019','2020','2021']
          width: 500px
      tooltip: "Median Private Sector Rents<br />{{ LAD21NM }} ({{ _value }}): <strong>&pound;{{ {{ _value }} | toLocaleString() }}</strong>"
