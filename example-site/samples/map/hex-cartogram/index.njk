          E06000014: { n: York, colour: "#F92626", q: 0, r: 1 }
      data:
        - { code: "E08000016", "LAD21NM":"Barnsley","Aged 15 years and under":44782 }
        - { code: "E08000032", "LAD21NM":"Bradford","Aged 15 years and under":124837 }
